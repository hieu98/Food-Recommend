<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_tg"
                    android:gravity="center"
                    android:layout_marginTop="45dp"
                    android:text="23:45"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="30sp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/tv_tt"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_tt"
                    android:text="23*C"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="30sp"
                    android:layout_marginTop="45dp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/tv_tg"
                    app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                    android:src="@drawable/ic_baseline_wb_sunny_24"
                    android:background="@color/white"
                    android:id="@+id/imgv_tg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tg"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/imgv_tt"
                    app:layout_constraintEnd_toEndOf="@+id/tv_tg"
                    app:layout_constraintStart_toStartOf="@id/tv_tg"/>
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/ic_baseline_nights_stay_24"
                    android:background="@color/white"
                    android:id="@+id/imgv_tt"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tt"
                    app:layout_constraintLeft_toRightOf="@id/imgv_tg"
                    app:layout_constraintEnd_toEndOf="@+id/tv_tt"
                    app:layout_constraintStart_toStartOf="@id/tv_tt"/>
                <TextView
                    android:text="Thời gian"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_tg_lable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/tv_tg"
                    app:layout_constraintEnd_toEndOf="@+id/tv_tg"
                    app:layout_constraintStart_toStartOf="@+id/tv_tg"/>
                <TextView
                    android:text="Thời tiết"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_tt_lable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/tv_tt"
                    app:layout_constraintEnd_toEndOf="@+id/tv_tt"
                    app:layout_constraintStart_toStartOf="@+id/tv_tt"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="7dp"
                    android:textSize="15sp"
                    android:text="Đêm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/imgv_tg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/imgv_tg"
                    app:layout_constraintStart_toStartOf="@+id/imgv_tg"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="7dp"
                    android:textSize="15sp"
                    android:text="Nóng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/imgv_tt"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/imgv_tt"
                    app:layout_constraintStart_toStartOf="@+id/imgv_tt"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop ="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Gợi ý cho bạn"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewhome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop ="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>
    </LinearLayout>
</LinearLayout>