<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="2dp"
                android:id="@+id/imgv_dsct"
                android:background="#666"
                android:layout_width="160dp"
                android:layout_height="160dp"/>
            <TextView
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/imgv_dsct"
                android:id="@+id/txttenmon_dsct"
                android:textColor="#1080D6"
                android:text="Tên Món Ăn trong danh sách"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginBottom="2dp"
                android:layout_alignLeft="@+id/txttenmon_dsct"
                android:layout_below="@id/txttenmon_dsct"
                android:text="Giới thiệu qua về món ăn"
                android:textColor="#939393"
                android:id="@+id/txtgioithieumon_dsct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginBottom="2dp"
                android:id="@+id/tv2"
                android:layout_alignLeft="@+id/txtgioithieumon_dsct"
                android:layout_below="@+id/txtgioithieumon_dsct"
                android:text="Người Đăng: "
                android:textColor="#D6B70E"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtnguoidang_dsct"
                android:layout_below="@+id/txtgioithieumon_dsct"
                android:layout_toRightOf="@+id/tv2"
                android:text="day la nguoi dang"
                android:textColor="#000000"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/tv1"
                android:text="TAGS : "
                android:textSize="13sp"
                android:textColor="#6688CC"
                android:layout_alignLeft="@+id/txttenmon_dsct"
                android:layout_below="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_margin="5dp"
                android:gravity="center"
                android:id="@+id/txtthoigian_dsct"
                android:layout_below="@+id/tv1"
                android:layout_alignLeft="@+id/txttenmon_dsct"
                android:background="@drawable/tags_background"
                android:text="Trưa"
                android:includeFontPadding="false"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="13sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_margin="5dp"
                android:gravity="center"
                android:id="@+id/txtthoitiet_dsct"
                android:layout_below="@+id/tv1"
                android:layout_toRightOf="@id/txtthoigian_dsct"
                android:text="Nóng"
                android:includeFontPadding="false"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/tags_background"
                android:textSize="13sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>